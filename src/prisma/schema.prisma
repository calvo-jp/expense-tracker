datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  username String    @unique
  password String
  expenses Expense[]
  reports  Report[]

  @@map("users")
}

model Expense {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  what      String
  where     String
  when      DateTime
  amount    Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId

  @@map("expenses")
}

model Report {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId
  frequency     Frequency
  inclusionDate DateTime[]
  amount        Float
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  user          User       @relation(fields: [userId], references: [id])
  userId        String     @db.ObjectId

  @@map("reports")
}

enum Frequency {
  Daily
  Weekly
  Monthly
  Annually
  Yearly
}
